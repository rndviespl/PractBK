<Window x:Class="bk654.RestaurantFolder.CreateRestaurant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bk654.RestaurantFolder"
        mc:Ignorable="d"
        Title="CreateRestaurant" Height="350" Width="800" MinHeight="350" MinWidth="800" MaxHeight="350" MaxWidth="800">
    <StackPanel Margin="10">
        <Label Content="код ресторана" Margin="2,5"/>
        <TextBox x:Name="addRestaurantCodeTextBox" Margin="2,5" MaxLength="10"/>
        <Label Content="город" Margin="2,5"/>
        <TextBox x:Name="addRestaurantTowntTextBox" Margin="2,5" MaxLength="25"/>
        <Label Content=" адрес" Margin="2,5"/>
        <TextBox x:Name="addRestaurantAddressTextBox" Margin="2,5" MaxLength="100"/>
        <Label Content="торговый центр или его подобие" Margin="2,5"/>
        <TextBox x:Name="addRestaurantMallTextBox" Margin="2,5" MaxLength="100"/>
        <Button x:Name="addRestaurantButton" Click="addRestaurantButton_Click" Content="добавить ресторан" Width="150" Margin="2,5"/>
    </StackPanel>
</Window>
