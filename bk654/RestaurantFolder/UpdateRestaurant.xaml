<Window x:Class="bk654.RestaurantFolder.UpdateRestaurant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bk654.RestaurantFolder"
        mc:Ignorable="d"
        Title="UpdateRestaurant" Height="350" Width="800" MinHeight="350" MinWidth="800" MaxHeight="350" MaxWidth="800">
    <StackPanel Margin="10">
        <Label Content="код ресторана" Margin="2,5"/>
        <TextBox x:Name="restaurantCodeTextBox" Margin="2,5"/>
        <Label Content="город" Margin="2,5"/>
        <TextBox x:Name="restaurantTowntTextBox" Margin="2,5"/>
        <Label Content=" адрес" Margin="2,5"/>
        <TextBox x:Name="restaurantAddressTextBox" Margin="2,5"/>
        <Label Content="торговый центр или его подобие" Margin="2,5"/>
        <TextBox x:Name="restaurantMallTextBox" Margin="2,5"/>
        <Button x:Name="updateRestaurantButton" Click="UpdateRestaurantButton_Click" Content="обновить ресторан" Width="150" Margin="2,5"/>
    </StackPanel>
</Window>
