<Window x:Class="bk654.WorkerFolder.DeleteWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bk654.WorkerFolder"
        mc:Ignorable="d"
        Title="DeleteWorkerWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Введите ID работника для удаления:" Margin="10" />
        <TextBox x:Name="textBoxWorkerId"  Margin="10"/>
        <Button Content="Удалить работника" Click="DeleteWorkerByIdButton_Click" Margin="10" />

    </StackPanel>
</Window>
